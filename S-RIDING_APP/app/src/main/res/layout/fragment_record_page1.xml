<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Tab1" >
<!--
    <ImageView
        android:layout_width="350dp"
        android:layout_height="250dp"
    android:id="@+id/imageView2"
    android:background="@drawable/googlemap"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
-->

    <com.google.android.gms.maps.MapView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/page_map"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="20dp"
        android:text="군자동 > 군자동"
        android:id="@+id/text_location"
        android:layout_below="@+id/page_map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/text_location"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/page_map"
        android:layout_alignEnd="@+id/page_map"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="주행시간"
            android:id="@+id/textView12"
            android:layout_below="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="00:01:44"
            android:id="@+id/text_ridingTime"
            android:layout_alignTop="@+id/textView12"
            android:layout_toRightOf="@+id/textView12"
            android:layout_toEndOf="@+id/textView12" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="평균속도"
            android:id="@+id/textView14" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="10Km/h"
            android:id="@+id/text_aveSpeed" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="휴식시간"
            android:id="@+id/textView16"
            android:layout_below="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="00:03:44"
            android:id="@+id/text_restTime"
            android:layout_alignTop="@+id/textView16"
            android:layout_toRightOf="@+id/textView16"
            android:layout_toEndOf="@+id/textView16" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="최고속도"
            android:id="@+id/textView18" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="10Km/h"
            android:id="@+id/text_bestSpeed" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4">

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="전체시간"
            android:id="@+id/textView20"

            android:layout_below="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="00:04:44"
            android:id="@+id/text_totalTime"
            android:layout_alignTop="@+id/textView20"
            android:layout_toRightOf="@+id/textView20"
            android:layout_toEndOf="@+id/textView20" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="칼로리"
            android:id="@+id/textView22" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="10Km/h"
            android:id="@+id/text_kcal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout">

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="거리"
            android:id="@+id/textView24"
            android:layout_below="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="3.15km"

            android:id="@+id/text_distance"
            android:layout_alignTop="@+id/textView24"
            android:layout_toRightOf="@+id/textView24"
            android:layout_toEndOf="@+id/textView24" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="온도"
            android:id="@+id/textView26" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"

            android:text="17"
            android:id="@+id/temperature" />
    </LinearLayout>

</RelativeLayout>
